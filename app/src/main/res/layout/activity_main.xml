<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.lucky.readonchandler.MainActivity">

    <RelativeLayout
        android:id="@+id/manual_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_button_view_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/activity_main_button_view_margin"
        android:layout_marginBottom="@dimen/activity_main_button_view_margin">
    <ImageView
        android:id="@+id/manual_image_id"
        android:layout_width="@dimen/activity_main_image_view_height"
        android:layout_height="@dimen/activity_main_image_view_height"
        android:layout_marginLeft="@dimen/activity_main_image_view_left_margin"
        android:layout_centerVertical="true"
        android:background="@drawable/manual"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/manual"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/activity_main_text_view_size"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/event_id"
        android:layout_below="@id/manual_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_button_view_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorBlueShade"
        android:layout_marginTop="@dimen/activity_main_button_view_margin"
        android:layout_marginBottom="@dimen/activity_main_button_view_margin">
        <ImageView
            android:id="@+id/event_image_id"
            android:layout_marginLeft="@dimen/activity_main_image_view_left_margin"
            android:layout_width="@dimen/activity_main_image_view_height"
            android:layout_height="@dimen/activity_main_image_view_height"
            android:layout_centerVertical="true"
            android:background="@drawable/map"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/events"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/activity_main_text_view_size"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/calendar"
        android:layout_below="@id/event_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_button_view_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorRed"
        android:layout_marginTop="@dimen/activity_main_button_view_margin"
        android:layout_marginBottom="@dimen/activity_main_button_view_margin">
        <ImageView
            android:id="@+id/calendar_image_id"
            android:layout_marginLeft="@dimen/activity_main_image_view_left_margin"
            android:layout_width="@dimen/activity_main_image_view_height"
            android:layout_height="@dimen/activity_main_image_view_height"
            android:layout_centerVertical="true"
            android:background="@drawable/calendar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/calendar"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/activity_main_text_view_size"/>
    </RelativeLayout>
</LinearLayout>
